<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Classify.ClassifyFragment"

    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/classify"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/classify_instruction"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="1350px"
            android:layout_marginBottom="15dp"
            app:strokeWidth="1dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/previewImageView"
                    android:src="@drawable/ic_gambar"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/classification_galeri"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:text="Galeri"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                app:cornerRadius="5dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/classification_camera"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_bold"
                android:text="Camera"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:cornerRadius="5dp"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/analyze_button"
            android:fontFamily="@font/montserrat_bold"
            android:text="Deteksi"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="5dp"/>

    </LinearLayout>



</ScrollView>